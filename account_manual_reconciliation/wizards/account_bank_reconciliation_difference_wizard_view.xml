<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="account_bank_reconciliation_difference_wizard_view">
        <field name="name">account.bank.reconciliation.difference.wizard.view</field>
        <field name="model">account.bank.reconciliation.difference.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="amount" readonly="1" attrs="{'invisible': [('amount', '=', 0)]}"/>
                        <field name="account_id" attrs="{
                            'invisible': [('amount', '!=', 0)],
                            'required': [('amount', '=', 0)],
                        }"/>
                    </group>
                </group>
                <field name="line_ids" attrs="{'invisible': [('amount', '=', 0)]}">
                    <tree editable="top">
                        <field name="account_id" options="{'no_create_edit': True,}"/>
                        <field name="account_analytic_id" options="{'no_create_edit': True,}"/>
                        <field name="name"/>
                        <field name="amount"/>
                    </tree>
                </field>
                <footer>
                    <button
                        type="object"
                        name="action_difference_reconciliation"
                        string="Difference Reconcilie"
                        class="oe_highlight"
                    />
                    <button
                        string="Cancel"
                        special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="account_bank_reconciliation_difference_wizard_wizard" model="ir.actions.act_window">
        <field name="name">account.bank.reconciliation.difference.wizard</field>
        <field name="res_model">account.bank.reconciliation.difference.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>

