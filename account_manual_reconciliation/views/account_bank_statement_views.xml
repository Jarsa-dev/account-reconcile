<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bank_statement_form_inherit_account" model="ir.ui.view">
        <field name="name">account.bank.statement.view.form.inherit</field>
        <field name="model">account.bank.statement</field>
        <field name="inherit_id" ref="account.view_bank_statement_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='button_cancel_reconciliation']" position="after">
                <button name="show_reconciled_moves" attrs="{'invisible': ['|',('journal_entry_ids', '=', []), ('state', '=', 'confirm')]}" string="Show related lines" type="object" icon="fa-link"/>
            </xpath>
        </field>
    </record>
</odoo>
